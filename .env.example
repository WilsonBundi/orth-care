# ============================================
# DATABASE CONFIGURATION - FIREBASE FIRESTORE
# ============================================

# Firebase Configuration
# Option 1: Use service account JSON (Production - Recommended)
# Get this from Firebase Console → Project Settings → Service Accounts → Generate new private key
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Option 2: Use project ID with application default credentials (Development - Easier)
# Get this from Firebase Console → Project Settings → General → Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Example:
# FIREBASE_PROJECT_ID=orthopedic-care-12345

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-secret-key-change-this-in-production

# Logging
LOG_LEVEL=info

# Security
HTTPS_ENABLED=false
